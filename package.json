{
  "name": "gitamite-pc",
  "productName": "gitamite-pc",
  "version": "0.0.1",
  "description": "Gitam app to access all the gitam websites built for PC. ",
  "main": "src/index.js",
  "build": {
    "appId": "org.innovationcenter.gitamitepc",
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  },
  "scripts": {
    "patch": "npm version patch &&  git push",
    "minor": "npm version minor && git push",
    "major": "npm version major && git push",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "Sumanth Perambuduri",
    "email": "sumanthpera3@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "gitamite_pc"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "bootstrap": "^5.1.1",
    "browserify": "^17.0.0",
    "cheerio": "^1.0.0-rc.10",
    "crypto-js": "^4.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "14.0.1",
    "electron-builder": "^22.11.7"
  }
}
